<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">

  <name>mrs_lib</name>
  <version>0.2.0</version>
  <description>The MRS library</description>
  <author email="matous.vrba@fel.cvut.cz">Matou≈° Vrba</author>
  <maintainer email="tomas.baca@fel.cvut.cz">Tomas Baca</maintainer>
  <license>BSD 3-Clause</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>rclcpp_components</depend>
  <depend>rclcpp_lifecycle</depend>
  <depend>launch</depend>
  <depend>launch_ros</depend>
  <depend>builtin_interfaces</depend>

  <!-- this is needed to be able to run launch files -->
  <depend>mrs_lib_py</depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>

  <test_depend>ament_lint_auto</test_depend>

  <!-- add test dependencies on any linter, e.g. -->
  <test_depend>ament_cmake_clang_format</test_depend>
  <test_depend>ament_cmake_cppcheck</test_depend>

</package>
